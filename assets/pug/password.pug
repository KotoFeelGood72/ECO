extends _layout

block vars
	- array = {body_class:'mod_background', layout_mod:'', sub_keywords:'', title_inner:'LOST PASSWORD'}
block content_block
	+bread(['Главная'], 'Раздел')
	section.login 
		.section_in 
			.login_main--w 
				.login_title 
					h1 Восстановить пароль
				.login_form--w.lost_form
					form
						.login_form
							ul 
								li.login_input--w
									label(for="yourEmail") E-mail
									input(type="email" name="email" id="yourEmail" required)
						.login_btn--all 
							ul 
								li 
									button(type="submit") Восстановить пароль
								li
									a(href="#") Войти
								li 
									a(href="#") Зарегистрироваться
